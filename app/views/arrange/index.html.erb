  <h2 style="color:#FFF0A5;font-size:250%;">arrange your flowers</h2>


</div>

<div id='arrangement_canvas'>
  <% params[:gimps].each do |gimpy_num| %>
    <div class="arrangeable_gimper" id="lil_gimper_drag_<%=gimpy_num%>"><%= image_tag "flower#{gimpy_num}.png" %></div>
    <script>dragElement(document.getElementById("lil_gimper_drag_<%=gimpy_num%>"));</script>

  <% end %>
</div>
