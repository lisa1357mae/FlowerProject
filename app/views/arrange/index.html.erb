<h2 style= "color: #FFF0A5;font-size:250%;"> send your flowers <%=image_tag"heart.png"%> </h2>

<form onsubmit="return submitFlowerForm()" method="post" action="/send" id="form" class="topBefore">
<%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <input id="name" name="name" type="text" placeholder="RECIPIENT NAME">
  <input id="email" name="email" type="text" placeholder="RECIPIENT E-MAIL">
  <textarea id="message" name="message" type="text" placeholder="WRITE A MESSAGE"></textarea>
<input id="submit" type="submit" value="SEND YOUR FLOWERS">

</form>
